@model PagedList.IPagedList<Web_Ban_Giay_2.Models.Entities.NhaSanXuat>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
<div style="width: 81%;">
    <div class="title-sp">
        <h2>Thương Hiệu</h2>

        <button>
            <p>
                @Html.ActionLink("Thêm mới", "Create")
            </p>
        </button>
    </div>
    <table class="table" style="width: 40%;">
        <tr style="background: #efeded;">
            <th>
                Thương hiệu
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tennhasx)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Manhasx }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Manhasx }) |*@
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Manhasx })
                </td>
            </tr>
        }

    </table>

    <div style="margin-left:15px; margin-bottom:40px;">
        <!-- Thêm mã phân trang -->
        <br />
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page }))
        <!-- Kết thúc -->
    </div>
</div>