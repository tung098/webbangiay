@model Web_Ban_Giay_2.Models.Entities.ChiTietSize

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
<div style="margin-left: 15px; width: 71%;">
<h2>Thêm Size</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Chi tiết size</h4>
        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
        <div class="form-group">
            @Html.LabelFor(model => model.Magiay, "Tên giày", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" type="text" id="Magiay" name="Magiay" value="@Model.Magiay" placeholder="@Model.Giay.Tengiay" readonly />
                <input class="form-control abc" type="text" value="@Model.Giay.Tengiay" readonly />
                @Html.ValidationMessageFor(model => model.Magiay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Masize, "Số size", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Masize", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Masize, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
</div>
