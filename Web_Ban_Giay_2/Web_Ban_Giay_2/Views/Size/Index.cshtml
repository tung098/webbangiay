@*@model IEnumerable<Web_Ban_Giay_2.Models.Entities.Size>*@

@model PagedList.IPagedList<Web_Ban_Giay_2.Models.Entities.Size>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
    <div style="width: 81%;">
        <div class="title-sp">
            <h2>Size</h2>

            <button>
                <p>
                    @Html.ActionLink("Thêm mới", "Create")
                </p>
            </button>
        </div>
        <table class="table" style="width: 40%;">
            <tr style="background: #efeded;">
                <th>
                    Size
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sosize)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Masize }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.Masize }) |*@
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Masize })
                    </td>
                </tr>
            }

        </table>

        <div style="margin-left:15px; margin-bottom:40px;">
            <!-- Thêm mã phân trang -->
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
            <!-- Kết thúc -->
        </div>
    </div>