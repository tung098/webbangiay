@model Web_Ban_Giay_2.Models.Entities.Giay
@using Web_Ban_Giay_2.Models.Entities;

@*@model List<Web_Ban_Giay_2.Models.Entities.Giay>*@
@{
    ViewBag.Title = "ChiTiet_SP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content-ct">

    <!-- Tabs -->
